<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Bank.MobileUI.Converters"
             x:Class="Bank.MobileUI.Views.DashboardPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F7FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:PriceColorConverter x:Key="PriceColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="380, *">
        
        <BoxView Grid.Row="0" Grid.RowSpan="2" VerticalOptions="Start" HeightRequest="450">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8E44AD" Offset="0.1" />
                    <GradientStop Color="#3498DB" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <VerticalStackLayout Grid.Row="0" Padding="25,60,25,0" Spacing="5">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Image Source="search_white.png" WidthRequest="22" HorizontalOptions="Start"/>
                <Image Grid.Column="1" Source="mic_white.png" WidthRequest="28" HorizontalOptions="Center"/>
                <Image Grid.Column="2" Source="profile_white.png" WidthRequest="22" HorizontalOptions="End"/>
            </Grid>

            <Label Text="My account" TextColor="#DCDDE1" HorizontalOptions="Center" Margin="0,30,0,0" FontSize="15"/>
            
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="2">
                <Label Text="{Binding TotalBalance, Converter={StaticResource CurrencyConverter}, ConverterParameter='ETH'}" TextColor="White" FontSize="28" />
            </HorizontalStackLayout>

            <Path Data="M0,80 Q40,20 80,60 T160,40 T240,70 T320,30" 
                  Stroke="White" StrokeThickness="2" HeightRequest="100" Aspect="Fill" Opacity="0.8" Margin="0,15"/>
            
            <Grid ColumnDefinitions="*, *, *, *, *" Padding="10,0">
                <Label Text="JUL 2" TextColor="#DCDDE1" FontSize="10" HorizontalOptions="Center"/>
                <Label Grid.Column="2" Text="JUL 22" TextColor="White" FontSize="11" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Grid.Column="4" Text="AUG 12" TextColor="#DCDDE1" FontSize="10" HorizontalOptions="Center"/>
            </Grid>
        </VerticalStackLayout>

        <Frame Grid.Row="1" BackgroundColor="White" CornerRadius="40" Margin="0,-20,0,0" HasShadow="False" Padding="0">
            <VerticalStackLayout Padding="0,10,0,100"> 
                <FlexLayout JustifyContent="SpaceEvenly" Padding="15">
                    <Label Text="All" TextColor="#3498DB" FontAttributes="Bold"/>
                    <Label Text="Transactions 10" TextColor="#BDC3C7"/>
                    <Label Text="Friends 4" TextColor="#BDC3C7"/>
                </FlexLayout>

                <BoxView HeightRequest="1" Color="#F0F0F0" Margin="25,0"/>
                <Label Text="Monday July 22, 2019" TextColor="#BDC3C7" Margin="25,15" FontSize="12"/>

                <CollectionView ItemsSource="{Binding Assets}" Margin="20,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="55, *, Auto" Padding="0,12">
                                <Border Grid.Column="0" WidthRequest="44" HeightRequest="44" StrokeShape="RoundRectangle 22" BackgroundColor="#F8F9FB">
                                    <Image Source="avatar_placeholder.png" Aspect="AspectFit" Margin="8"/>
                                </Border>
                                <VerticalStackLayout Grid.Column="1" Margin="15,0" VerticalOptions="Center">
                                    <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16" TextColor="#2C3E50"/>
                                    <Label Text="{Binding Symbol}" TextColor="#7F8C8D" FontSize="12"/>
                                </VerticalStackLayout>
                                <Label Grid.Column="2" 
                                       Text="{Binding UsdValue, StringFormat='{0:+$0.00;-$0.00}'}" 
                                       TextColor="{Binding UsdValue, Converter={StaticResource PriceColorConverter}}" 
                                       FontAttributes="Bold" FontSize="15" VerticalOptions="Center"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>