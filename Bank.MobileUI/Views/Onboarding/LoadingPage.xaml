<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bank.MobileUI.Views.Onboarding.LoadingPage"
             BackgroundColor="#8E44AD"
             Shell.NavBarIsVisible="False">
             
    <!-- Remova a Dock se estiver usando o Template Global -->

    <Grid>
        <BoxView VerticalOptions="Fill">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8E44AD" Offset="0.1" />
                    <GradientStop Color="#3498DB" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
            <ActivityIndicator IsRunning="True" Color="White" />
            <Label Text="Iniciando NeoBank..." TextColor="White" FontSize="16" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>