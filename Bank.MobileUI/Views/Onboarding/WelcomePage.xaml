<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bank.MobileUI.Views.Onboarding.WelcomePage"
             BackgroundColor="#F5F7FA"
             Shell.NavBarIsVisible="False"
             ControlTemplate="{x:Null}">

    <Grid>
        
        <BoxView VerticalOptions="Start" HeightRequest="600">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8E44AD" Offset="0.1" />
                    <GradientStop Color="#3498DB" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <VerticalStackLayout Spacing="10" VerticalOptions="Center" Padding="40">
            
            <Border WidthRequest="100" 
                    HeightRequest="100" 
                    StrokeShape="RoundRectangle 50" 
                    BackgroundColor="Transparent" 
                    StrokeThickness="0"
                    HorizontalOptions="Center"
                    Margin="0,0,0,20">
                <Image Source="brainstorm.png"></Image>
            </Border>
            
            <Label Text="D-AI Bank" 
                   FontSize="36" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalTextAlignment="Center"/>

            <Label Text="O Seu futuro financeiro descentralizado na palma da sua mão." 
                   TextColor="#DCDDE1" 
                   HorizontalTextAlignment="Center" 
                   FontSize="16"
                   Margin="0,0,0,40"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}" Color="White" Margin="0,20"/>

            <Button Text="Criar Nova Carteira" 
                    Command="{Binding CreateWalletCommand}"
                    BackgroundColor="White" 
                    TextColor="#8E44AD"
                    FontAttributes="Bold"
                    HeightRequest="56"
                    CornerRadius="28">
                <Button.Shadow>
                    <Shadow Brush="Black" Offset="0,10" Radius="15" Opacity="0.1" />
                </Button.Shadow>
            </Button>

            <Button Text="Já tenho uma Carteira"
                    Command="{Binding GoToImportCommand}"
                    BackgroundColor="#8E44AD" 
                    TextColor="White"
                    FontSize="15"
                    FontAttributes="Bold"
                    CornerRadius="28"
                    Margin="0,10,0,0"
                    HeightRequest="50"/>
        </VerticalStackLayout>

        <Label Text="Secure &amp; Decentralized" 
               VerticalOptions="End" 
               HorizontalOptions="Center" 
               TextColor="MediumSlateBlue" 
               FontSize="12" 
               Margin="0,0,0,30" 
               CharacterSpacing="2"/>
    </Grid>
</ContentPage>