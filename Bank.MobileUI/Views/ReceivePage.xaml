<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             xmlns:vm="clr-namespace:Bank.MobileUI.ViewModels"
             x:Class="Bank.MobileUI.Views.ReceivePage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F7FA">

    <Grid RowDefinitions="Auto, *">

        <!-- 1. Fundo Gradiente -->
        <BoxView Grid.Row="0" Grid.RowSpan="2" VerticalOptions="Start" HeightRequest="350">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8E44AD" Offset="0.1" />
                    <GradientStop Color="#3498DB" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!-- 2. Cabeçalho Personalizado -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Padding="20,50,20,20">
            
            <!-- CORREÇÃO AQUI: Removido Source="...", mantendo apenas o FontImageSource interno -->
            <ImageButton Command="{Binding GoBackCommand}"
                         WidthRequest="40" 
                         HeightRequest="40"
                         HorizontalOptions="Start"
                         BackgroundColor="Transparent">
                <ImageButton.Source>
                    <FontImageSource Glyph="&#x2190;" FontFamily="OpenSansRegular" Color="White" Size="24"/>
                </ImageButton.Source>
            </ImageButton>
            
            <Label Grid.Column="1" 
                   Text="Receber Pagamento" 
                   TextColor="White" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   Margin="-40,0,0,0"/> <!-- Ajuste de margem compensatória -->
        </Grid>

        <!-- 3. Cartão Branco Flutuante -->
        <Frame Grid.Row="1" 
               BackgroundColor="White" 
               CornerRadius="40" 
               Margin="0,20,0,0" 
               HasShadow="False" 
               Padding="30"
               VerticalOptions="Fill">
            
            <VerticalStackLayout Spacing="25" VerticalOptions="Center">

                <Label Text="Escaneie para pagar" 
                       TextColor="#7F8C8D" 
                       FontSize="16" 
                       HorizontalOptions="Center"/>

                <!-- GERADOR DE QR CODE -->
                <Border Stroke="#F0F0F0" 
                        StrokeThickness="1" 
                        StrokeShape="RoundRectangle 20"
                        WidthRequest="220" 
                        HeightRequest="220"
                        HorizontalOptions="Center"
                        Padding="10">
                    
                    <!-- Certifique-se que o pacote ZXing.Net.Maui.Controls está instalado -->
                    <zxing:BarcodeGeneratorView 
                        Value="{Binding QrCodeContent}"
                        Format="QrCode"
                        ForegroundColor="#2C3E50"
                        BackgroundColor="Transparent"
                        Margin="5"/>
                </Border>

                <!-- Endereço da Carteira -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Seu endereço de carteira" 
                           TextColor="#BDC3C7" 
                           FontSize="12" 
                           HorizontalOptions="Center"/>
                    
                    <Frame BackgroundColor="#F8F9FB" 
                           Padding="15,10" 
                           CornerRadius="10" 
                           HasShadow="False">
                        <Label Text="{Binding WalletAddress}" 
                               TextColor="#2C3E50" 
                               FontAttributes="Bold" 
                               FontSize="13" 
                               HorizontalTextAlignment="Center"
                               LineBreakMode="MiddleTruncation"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Botões de Ação -->
                <Grid ColumnDefinitions="*, *" ColumnSpacing="15" Margin="0,20,0,0">
                    
                    <!-- Botão Copiar -->
                    <Button Grid.Column="0"
                            Text="Copiar"
                            Command="{Binding CopyAddressCommand}"
                            BackgroundColor="#EDF2F7"
                            TextColor="#3498DB"
                            FontAttributes="Bold"
                            CornerRadius="25"
                            HeightRequest="50"/>

                    <!-- Botão Compartilhar -->
                    <Button Grid.Column="1"
                            Text="Compartilhar"
                            Command="{Binding ShareAddressCommand}"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="25"
                            HeightRequest="50">
                        <Button.Shadow>
                            <Shadow Brush="#3498DB" Offset="0,5" Radius="10" Opacity="0.4"/>
                        </Button.Shadow>
                    </Button>
                </Grid>

            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>