<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bank.MobileUI.Views.StakingPage"
             BackgroundColor="#F5F7FA" Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="300, *">
        <BoxView Grid.Row="0">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8E44AD" Offset="0.1" />
                    <GradientStop Color="#3498DB" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <VerticalStackLayout Grid.Row="0" Padding="25,60,25,0" Spacing="5">
            <Label Text="Rentabilidade" TextColor="White" FontSize="24" FontAttributes="Bold"/>
            <Label Text="Seu rendimento acumulado" TextColor="#DCDDE1" FontSize="14"/>
            <Label Text="$ 1,240.50" TextColor="White" FontSize="42" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Label Text="+ $12.40 hoje (1.2%)" TextColor="#2ECC71" FontSize="14" FontAttributes="Bold"/>
        </VerticalStackLayout>

        <Frame Grid.Row="1" BackgroundColor="White" CornerRadius="40" Margin="0,-40,0,0" HasShadow="False" Padding="0">
            <VerticalStackLayout Padding="25" Spacing="20">
                <Label Text="Oportunidades de Staking" TextColor="#2C3E50" FontAttributes="Bold" FontSize="18"/>
                
                <CollectionView ItemsSource="{Binding Assets}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeShape="RoundRectangle 20" BackgroundColor="#F8F9FB" StrokeThickness="0" Margin="0,0,0,15" Padding="15">
                                <Grid ColumnDefinitions="*, Auto, Auto">
                                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                                        <Label Text="{Binding Name}" TextColor="#2C3E50" FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding Risk}" TextColor="#7F8C8D" FontSize="12"/>
                                    </VerticalStackLayout>
                                    
                                    <Label Grid.Column="1" Text="{Binding Apy, StringFormat='{0}% APY'}" 
                                           TextColor="#8E44AD" FontAttributes="Bold" VerticalOptions="Center" Margin="15,0"/>
                                    
                                    <Button Grid.Column="2" Text="Investir" BackgroundColor="#8E44AD" 
                                            TextColor="White" CornerRadius="15" HeightRequest="35" FontSize="12"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>