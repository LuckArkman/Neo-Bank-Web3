<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bank.MobileUI.Views.Onboarding.BackupPage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">
        <Image Source="shield_security.png" HeightRequest="80" HorizontalOptions="Center"/>
        
        <Label Text="Sua Frase de Recuperação" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#2C3E50"/>
        <Label Text="Esta é a única forma de recuperar sua conta se você perder seu dispositivo." TextColor="#7F8C8D" HorizontalTextAlignment="Center"/>

        <Border BackgroundColor="#F8F9FB" StrokeShape="RoundRectangle 20" Padding="30" StrokeThickness="1" Stroke="#F0F0F0">
            <Label Text="{Binding SecretPhrase}" FontSize="18" LineHeight="1.5" HorizontalTextAlignment="Center" TextColor="#8E44AD" FontAttributes="Bold"/>
        </Border>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4" BackgroundColor="#E74C3C"/>
            <Label Text="Não tire print ou fotos desta tela!" TextColor="#E74C3C" FontSize="12" VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <Button Text="Já anotei com segurança" Command="{Binding VerifyBackupCommand}" 
                BackgroundColor="#8E44AD" CornerRadius="25" HeightRequest="55" Margin="0,40,0,0"/>
    </VerticalStackLayout>
</ContentPage>