<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bank.MobileUI.Views.HistoryPage">
    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding GroupedTransactions}" IsGrouped="True">
    
            <!-- Cabeçalho do Grupo (Ex: "Hoje") -->
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <Label Text="{Binding Name}" 
                           TextColor="#AAAAAA" 
                           FontSize="14" 
                           FontAttributes="Bold" 
                           Padding="20,10,0,5"
                           BackgroundColor="#121212"/>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>

            <!-- Item da Transação -->
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="20,10" ColumnDefinitions="Auto, *, Auto">
                        <!-- Ícone baseada no Tipo (Enviado/Recebido) -->
                        <Image Grid.Column="0" Source="{Binding Type, Converter={StaticResource TxIconConverter}}" WidthRequest="40"/>
                
                        <StackLayout Grid.Column="1" Margin="15,0">
                            <Label Text="{Binding To, StringFormat='Para: {0}'}" LineBreakMode="TailTruncation" TextColor="White"/>
                            <Label Text="{Binding Date, Converter={StaticResource DateHumanizer}}" TextColor="Gray" FontSize="12"/>
                        </StackLayout>

                        <Label Grid.Column="2" 
                               Text="{Binding Amount}" 
                               TextColor="{Binding Type, Converter={StaticResource ColorConverter}}" 
                               FontAttributes="Bold"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>