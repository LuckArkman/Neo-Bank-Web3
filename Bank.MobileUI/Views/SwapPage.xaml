<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bank.MobileUI.Views.SwapPage"
             BackgroundColor="#F5F7FA" Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="300, *">
        <BoxView Grid.Row="0">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8E44AD" Offset="0.1" />
                    <GradientStop Color="#3498DB" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <VerticalStackLayout Grid.Row="0" Padding="25,60,25,0" Spacing="5" HorizontalOptions="Center">
            <Label Text="Trocar Ativos" TextColor="White" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Text="Swap instantâneo com as melhores taxas" TextColor="#DCDDE1" FontSize="13"/>
        </VerticalStackLayout>

        <Frame Grid.Row="1" BackgroundColor="White" CornerRadius="40" Margin="0,-40,0,0" HasShadow="False" Padding="25">
            <VerticalStackLayout Spacing="15">
                
                <Border BackgroundColor="#F8F9FB" StrokeShape="RoundRectangle 20" Padding="15" StrokeThickness="0">
                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                        <Label Text="Você paga" TextColor="#7F8C8D" FontSize="12"/>
                        <Label Grid.Column="1" Text="{Binding FromToken, StringFormat='Saldo: {0}'}" TextColor="#BDC3C7" FontSize="11"/>
                        <Entry Grid.Row="1" Text="{Binding AmountIn}" FontSize="28" FontAttributes="Bold" TextColor="#2C3E50" Keyboard="Numeric" BackgroundColor="Transparent"/>
                        <Button Grid.Row="1" Grid.Column="1" Text="{Binding FromToken}" BackgroundColor="White" CornerRadius="15" HeightRequest="40" TextColor="#2C3E50" FontAttributes="Bold"/>
                    </Grid>
                </Border>

                <Border BackgroundColor="#8E44AD" WidthRequest="44" HeightRequest="44" StrokeShape="RoundRectangle 22" HorizontalOptions="Center" Margin="0,-25,0,-25" ZIndex="1">
                    <Label Text="↓" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20"/>
                </Border>

                <Border BackgroundColor="#F8F9FB" StrokeShape="RoundRectangle 20" Padding="15" StrokeThickness="0">
                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                        <Label Text="Você recebe (estimado)" TextColor="#7F8C8D" FontSize="12"/>
                        <Label Grid.Row="1" Text="{Binding EstimatedOut}" FontSize="28" FontAttributes="Bold" TextColor="#3498DB"/>
                        <Button Grid.Row="1" Grid.Column="1" Text="{Binding ToToken}" BackgroundColor="White" CornerRadius="15" HeightRequest="40" TextColor="#2C3E50" FontAttributes="Bold"/>
                    </Grid>
                </Border>

                <Button Text="Confirmar Swap" Command="{Binding ExecuteActionCommand}" 
                        BackgroundColor="#8E44AD" CornerRadius="28" HeightRequest="56" 
                        FontAttributes="Bold" Margin="0,20,0,0"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>