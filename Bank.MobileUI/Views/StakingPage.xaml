<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Bank.MobileUI.ViewModels"
             x:Class="Bank.MobileUI.Views.StakingPage"
             Title="Rentabilidade"
             BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Banner de Rendimento Atual -->
            <Border StrokeThickness="0" StrokeShape="RoundRectangle 20">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,1">
                        <GradientStop Color="#8A2BE2" Offset="0.1"/>
                        <GradientStop Color="#4B0082" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackLayout Padding="25">
                    <Label Text="Seu Rendimento Acumulado" TextColor="#E0E0E0" FontSize="14"/>
                    <Label Text="$ 1,240.50" TextColor="White" FontSize="36" FontAttributes="Bold"/>
                    <Label Text="+ $12.40 (hoje)" TextColor="#00FF7F" FontSize="14" Margin="0,5,0,0"/>
                </StackLayout>
            </Border>

            <Label Text="Oportunidades de Staking" TextColor="White" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0"/>

            <!-- Lista de Pools -->
            <CollectionView ItemsSource="{Binding Pools}" HeightRequest="400">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#333" StrokeThickness="1" StrokeShape="RoundRectangle 15" BackgroundColor="#1E1E1E" Margin="0,5" Padding="15">
                            <Grid ColumnDefinitions="*, Auto, Auto">
                                <StackLayout Grid.Column="0">
                                    <Label Text="{Binding Name}" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                                    <Label Text="{Binding Risk, StringFormat='Risco: {0}'}" TextColor="#AAA" FontSize="12"/>
                                </StackLayout>

                                <Label Grid.Column="1" Text="{Binding Apy, StringFormat='{0}% APY'}" 
                                       TextColor="#00FF7F" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0"/>

                                <Button Grid.Column="2" Text="Investir" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:StakingViewModel}}, Path=StakeAssetsCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#2A2A2A" TextColor="White" HeightRequest="40" CornerRadius="10"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>